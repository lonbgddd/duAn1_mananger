<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="styleTitleLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_25dp</item>
        <item name="android:textColor">@color/brown_500</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:shadowColor">@color/brown_250</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="styleEditTextLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_edit_text_login</item>
        <item name="android:paddingLeft">@dimen/dimen_10dp</item>
        <item name="android:paddingVertical">@dimen/dimen_13dp</item>
        <item name="android:paddingEnd">@dimen/dimen_5dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/color_hint_icon_brown</item>
        <item name="android:drawablePadding">@dimen/dimen_8dp</item>
        <item name="android:textSize">@dimen/dimen_18dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="styleTilEditTextLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_edit_text_login</item>
        <item name="android:layout_marginTop">@dimen/dimen_18dp</item>
        <item name="android:layout_marginHorizontal">@dimen/dimen_30dp</item>
        <item name="android:elevation">@dimen/dimen_10dp</item>
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">@color/color_hint_icon_brown</item>
        <item name="hintEnabled">false</item>
        <item name="hintAnimationEnabled">true</item>
    </style>




</resources>
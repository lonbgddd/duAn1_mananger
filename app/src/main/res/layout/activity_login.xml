<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.LoginActivity"
    android:background="#DBC7A7">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:src="@drawable/img_sign_in"
        android:scaleType="fitXY"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:gravity="center"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#8C3F0A"
        android:textSize="25dp"/>

    <EditText
        android:id="@+id/number_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:drawableStart="@drawable/ic_phone"
        android:paddingLeft="10dp"
        android:inputType="phone"
        android:paddingVertical="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:drawablePadding="8dp"
        android:textColorHint="#4B1E00"
        android:background="@drawable/custom_edit_text_login"
        android:hint="Số điện thoại"
        android:fontFamily="@font/poppins_medium"
        android:textSize="18dp"
        android:elevation="10dp"
        />

        <EditText
            android:id="@+id/passwword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:drawableStart="@drawable/ic_pass"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:paddingVertical="15dp"
            android:drawablePadding="8dp"
            android:textColor="@color/white"
            android:textColorHint="#4B1E00"
            android:background="@drawable/custom_edit_text_login"
            android:hint="Mật khẩu"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="18dp"
            android:elevation="10dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="#8C3F0A"
            app:cardElevation="8dp">
            <Button
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng nhập"
                android:paddingHorizontal="30dp"
                android:background="@drawable/custom_button_login"
                android:fontFamily="@font/poppins_bold"
                android:textSize="18dp"
                android:textColor="@color/white"
                />
        </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nếu bạn chưa có tài khoản ?"
            android:fontFamily="@font/poppins_semibold"/>
        <TextView
            android:id="@+id/tvSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng kí ngay"
            android:textSize="19dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#8C3F0A"/>
    </LinearLayout>
</LinearLayout>
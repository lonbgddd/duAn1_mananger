<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.LoginActivity"
    android:background="#DBC7A7">

    <ImageView
        android:id="@+id/immSignUp"
        android:layout_width="match_parent"
        android:layout_height="345dp"
        android:src="@drawable/img_sign_up"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng kí tài khoản"
        android:gravity="center"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#8C3F0A"
        android:textSize="25dp"/>

    <EditText
        android:id="@+id/number_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:drawableStart="@drawable/ic_phone"
        android:paddingLeft="10dp"
        android:paddingVertical="13dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:drawablePadding="8dp"
        android:textColorHint="#4B1E00"
        android:background="@drawable/custom_edit_text_login"
        android:hint="Số điện thoại"
        android:fontFamily="@font/poppins_medium"
        android:textSize="18dp"
        android:elevation="10dp"
        />

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:drawableStart="@drawable/ic_pass"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:paddingVertical="13dp"
            android:drawablePadding="8dp"
            android:textColor="@color/white"
            android:textColorHint="#4B1E00"
            android:background="@drawable/custom_edit_text_login"
            android:hint="Mật khẩu"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="18dp"
            android:elevation="10dp"
            />
    <EditText
        android:id="@+id/re_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:drawableStart="@drawable/ic_pass"
        android:paddingLeft="10dp"
        android:inputType="textPassword"
        android:paddingVertical="13dp"
        android:drawablePadding="8dp"
        android:textColor="@color/white"
        android:textColorHint="#4B1E00"
        android:background="@drawable/custom_edit_text_login"
        android:hint="Nhập lại mật khẩu"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/poppins_medium"
        android:textSize="18dp"
        android:elevation="10dp"
        />

        <androidx.cardview.widget.CardView
            android:id="@+id/cavButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="25dp"
            app:cardBackgroundColor="#8C3F0A"
            app:cardElevation="8dp">
            <Button
                android:id="@+id/btn_signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng kí"
                android:paddingHorizontal="30dp"
                android:background="@drawable/custom_button_login"
                android:fontFamily="@font/poppins_bold"
                android:textSize="18dp"
                android:textColor="@color/white"
                />
        </androidx.cardview.widget.CardView>


</LinearLayout>